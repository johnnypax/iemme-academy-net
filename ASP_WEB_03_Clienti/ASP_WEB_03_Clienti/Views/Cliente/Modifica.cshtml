@model Cliente

<main class="container mt-2">

    <h1>Modifica Cliente</h1>

    <form method="post" asp-controller="Cliente" asp-action="EffettuaModifica">

        <input type="text" class="form-control d-none" asp-for="Codice" value="@Model.Codice" />

        <div class="mt-3">
            <label class="form-label" for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" value="@Model.Nome" />
        </div>
        <div class="mt-3">
            <label class="form-label" for="Cognome">Cognome</label>
        <input type="text" class="form-control" asp-for="Cognome" value="@Model.Cognome" />
        </div>
        <div class="mt-3">
            <label class="form-label" for="Indirizzo">Indirizzo</label>
        <input type="text" class="form-control" asp-for="Indirizzo" value="@Model.Indirizzo" />
        </div>
        <div class="mt-3">
            <label class="form-label" for="Telefono">Telefono</label>
        <input type="text" class="form-control" asp-for="Telefono" value="@Model.Telefono" />
        </div>
        <div class="mt-3">
            <label class="form-label" for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" value="@Model.Email" />
        </div>

        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</main>